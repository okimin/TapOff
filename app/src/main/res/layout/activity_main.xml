<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/counter" android:textSize="40sp"
            android:textAlignment="center" android:text="@string/number"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/currentCount" app:layout_constraintVertical_bias="0.146"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/counter"
            android:layout_marginTop="104dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/tapButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.259"
            android:text="@string/tap"/>
    <TextView
            android:text="@string/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/currentCount"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.073"/>
    <TextView
            android:text="@string/record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recordNumber"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="76dp" app:layout_constraintTop_toBottomOf="@+id/tapButton"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/startButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:text="@string/start" app:layout_constraintTop_toBottomOf="@+id/tapButton"
            app:layout_constraintBottom_toTopOf="@+id/recordNumber" app:layout_constraintVertical_bias="0.286"/>
    <TextView
            android:text="@string/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timeLeftText"
            android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@+id/counter" android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tapButton" app:layout_constraintVertical_bias="0.137"/>

</androidx.constraintlayout.widget.ConstraintLayout>